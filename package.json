{
  "name": "@elements/design-tokens",
  "description": "Shared Design Tokens set-up Elements projects",
  "author": "Elements",
  "repository": {
    "type": "git",
    "url": "git://github.com/elementsinteractive/design-tokens.git"
  },
  "keywords": [
    "design",
    "tokens",
    "elements"
  ],
  "version": "0.0.1",
  "main": "dist/index.js",
  "files": [
    "bin",
    "lib",
    "dist",
    "LICENSE",
    "types"
  ],
  "types": "dist/index.d.ts",
  "bin": {
    "elements-transform-design-tokens": "bin/design-tokens"
  },
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepack": "npm run build",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm run publish && semantic-release post",
    "prettier": "prettier",
    "prettier-write": "yarn prettier -- --parser typescript --no-semi --trailing-comma all --write --print-width 120",
    "prettier-project": "yarn prettier-write -- 'lib/**/*.{ts,tsx}'",
    "lint": "eslint \"lib/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "ejs": "^3.1.8",
    "style-dictionary": "^3.7.1",
    "tinycolor2": "^1.4.2",
    "token-transformer": "^0.0.23",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@octokit/core": "^3.6.0",
    "@octokit/plugin-paginate-rest": "^2.17.0",
    "@octokit/rest": "^18.12.0",
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^3.4.1",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "semantic-release": "^6.3.6",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2",
    "validate-commit-msg": "^2.12.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "eslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  }
}
